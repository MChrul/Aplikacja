<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receipt_list_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-01-12" />

            <TextView
                android:id="@+id/receipt_list_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numer: 1/01/2019" />

            <TextView
                android:id="@+id/receipt_list_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kwota: 252.00 PLN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/receipt_list_generate_pdf"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                app:srcCompat="@android:drawable/stat_sys_download" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>